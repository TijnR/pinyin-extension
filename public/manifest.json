{
  "manifest_version": 3,
  "name": "Pinyin Pro",
  "version": "0.1.1",
  "description": "Pinyin Pro helps you get pinyin everywhere you want.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
