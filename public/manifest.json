{
  "manifest_version": 3,
  "name": "Pinyin Now",
  "version": "0.0.4",
  "description": "Pinyin Now is a Chrome extension that helps display pinyin for Chinese characters.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "permissions": []
}
